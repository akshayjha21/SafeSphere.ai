{
  "manifest_version": 3,
  "name": "SafeSpace Lite",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:3000/*",
    "*://mail.google.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.x.com/*",
        "*://*.facebook.com/*"
      ],
      "js": ["contentScript_comments.js","contentScript.js","contentScript_image.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": ["contentScript.js"],
      "css": ["popup.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
